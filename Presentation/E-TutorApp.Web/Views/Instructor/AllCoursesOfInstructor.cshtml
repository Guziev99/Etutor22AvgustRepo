<h2>All Courses</h2>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@course.ImgUrl" width="80" height="500" class="card-img-top" alt="@course.Title" />
                <div class="card-body">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text">
                        <strong>Category:</strong> @course.CategoryName<br />
                        <strong>Price:</strong> $@course.Price<br />
                        <strong>Rating:</strong> @course.RatingScore<br />
                        <strong>Sales:</strong> @course.SaleCount
                    </p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary">View Course</a>
                </div>
            </div>
        </div>
    }
</div>