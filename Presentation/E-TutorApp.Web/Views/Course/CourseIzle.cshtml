@* @* @* @* @model CurriculumDetailViewModel

<div class="container">
    

    @foreach (var sect in Model.Sections)
    {
        <div class="section">
            
             <h2>@sect.SectionName</h2> 
            
            <ul>
                @foreach (var lecture in sect.Lectures)
                {
                    <li>
                        <a href="#" data-toggle="modal" data-target="#lectureModal" data-lecture-name="@lecture.LectureName" data-video-url="@lecture.VideoUrl" data-attach-file="@lecture.AttachFile" data-caption="@lecture.Caption" data-description="@lecture.Description" data-notes="@lecture.LectureNotes">
                            @lecture.LectureName
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</div>


<div class="modal fade" id="lectureModal" tabindex="-1" role="dialog" aria-labelledby="lectureModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lectureModalLabel">Lecture Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>Lecture Name:</strong> <span id="modalLectureName"></span></p>
                <p><strong>Video URL:</strong> <a id="modalVideoUrl" href="#" target="_blank">View Video</a></p>
                <p><strong>Attach File:</strong> <a id="modalAttachFile" href="#" target="_blank">Download</a></p>
                <p><strong>Caption:</strong> <span id="modalCaption"></span></p>
                <p><strong>Description:</strong> <span id="modalDescription"></span></p>
                <p><strong>Lecture Notes:</strong> <span id="modalLectureNotes"></span></p>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $('#lectureModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var lectureName = button.data('lecture-name');
        var videoUrl = button.data('video-url');
        var attachFile = button.data('attach-file');
        var caption = button.data('caption');
        var description = button.data('description');
        var notes = button.data('notes');
        
        var modal = $(this);
        modal.find('#modalLectureName').text(lectureName);
        modal.find('#modalVideoUrl').attr('href', videoUrl);
        modal.find('#modalAttachFile').attr('href', attachFile);
        modal.find('#modalCaption').text(caption);
        modal.find('#modalDescription').text(description);
        modal.find('#modalLectureNotes').text(notes);
    });
</script>
